@model Yuyi.Oa.Model.RoleInfo

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <script src="~/Scripts/jquery-1.7.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript">
        function afterEdit(data) {
            if (data == 'ok') {
                alert("修改成功！！");
                //修改成功 调用父窗体
                window.parent.window.afterEditSuccess();
            } else {
                alert(data);
            }

        }
        //父窗体调用
        function submitForm() {
            $("form").submit();
        }
    </script>
</head>
<body>

    @using (Ajax.BeginForm(new AjaxOptions() { OnSuccess = "afterEdit" }))
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>修改角色信息列表</legend>

            @Html.HiddenFor(model => model.ID)

            <div class="editor-label">
                @Html.LabelFor(model => model.Name, "角色名")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Remark, "备注")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Remark)
                @Html.ValidationMessageFor(model => model.Remark)
            </div>
            @Html.HiddenFor(model => model.DelFlag)

            @Html.HiddenFor(model => model.SubTime)

            @Html.HiddenFor(model => model.ModifyOn)
            <p>
                <input type="submit" value="修改" />
            </p>
        </fieldset>
    }
</body>
</html>
